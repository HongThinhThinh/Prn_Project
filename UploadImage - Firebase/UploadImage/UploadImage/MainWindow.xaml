<Window x:Class="UploadImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UploadImage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnStart" Content="Start" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="btnStart_Click"/>
        <Button Name="btnCapture" Content="Capture" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Click="btnCapture_Click"/>
        <Button Name="btnStop" Content="Stop" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,10,0,0" Click="btnStop_Click"/>
        <Image Name="imgScreen" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="760" Height="350" Visibility="Collapsed"/>

        <!-- Thêm CheckBox để chọn có gửi Firebase hay không -->
        <CheckBox Name="chkSendFirebase" Content="Send to Firebase" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" />
    </Grid>
</Window>
